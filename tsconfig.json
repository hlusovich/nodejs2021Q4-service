{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "noImplicitAny": true,
    "strict": true,
    "baseUrl": "./",
    "rootDir": "./",
    "removeComments": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es6",
      "es5"
    ],
    "preserveConstEnums": true
  },
  "include": [
    "./"
  ],
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx", ".ts", ".tsx"]
      }
    }
  },
  "exclude": [
    "./.github/",
    "./node_modules",
    "./test"
  ]
}
