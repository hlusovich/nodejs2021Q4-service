{
  "compilerOptions": {
    "module": "es6",
    "target": "ES2017",
    "noImplicitAny": true,
    "strict": true,
    "baseUrl": "./",
    "rootDir": "./",
    "removeComments": true,
    "moduleResolution": "node",
    "lib": [
      "es6",
      "dom",
      "es2017"
    ],
    "preserveConstEnums": true
  },
  "include": [
    "./"
  ],
  "exclude": [
    "./.github/",
    "./node_modules",
    "./test"
  ]
}
